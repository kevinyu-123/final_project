<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dine.root.mybatis.search.SearchMapper">
	<resultMap type="com.dine.root.search.dto.SearchDTO" id="search">
		<result property="foodName" column="FOOD_NAME" />
		<result property="foodComment" column="FOOD_COMMENT" />
		<result property="nation" column="NATION" />
		<result property="intro" column="INTRO" />
		<result property="category" column="CATEGORY_1" />
		<result property="rate" column="RATE_AVR" />
	</resultMap>

	<select id="viewAll" resultMap="search">
		SELECT FOOD_NAME, FOOD_COMMENT, NATION, INTRO, CATEGORY_1, RATE_AVR FROM FOOD
	</select>
</mapper>